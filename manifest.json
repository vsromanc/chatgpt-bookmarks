{
    "manifest_version": 3,
    "name": "GPT Bookmarks",
    "version": "1.0.0",
    "description": "Code blocks organizer for ChatGPT",
    "icons": {
        "16": "assets/16.png",
        "48": "assets/48.png",
        "128": "assets/128.png"
    },
    "permissions": ["storage", "cookies", "webNavigation"],
    "host_permissions": ["https://chatgpt.com/*", "https://chat.com/*"],
    "background": {
        "service_worker": "dist/background.js"
    },
    "commands": {
        "reload-extension": {
            "suggested_key": {
                "default": "Ctrl+Shift+9",
                "mac": "Command+Shift+9"
            },
            "description": "Reload the extension"
        }
    },
    "content_scripts": [
        {
            "matches": ["https://chatgpt.com/*", "https://chat.com/*"],
            "js": ["dist/content.js"],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["dist/web.js"],
            "matches": ["<all_urls>"]
        }
    ]
}
