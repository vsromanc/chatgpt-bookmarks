{
    "name": "browser-extension",
    "version": "1.0.0",
    "scripts": {
        "build": "cross-env NODE_ENV=production webpack --config webpack.config.js --mode production --stats-error-details",
        "watch": "webpack --config webpack.config.js --watch",
        "format": "prettier --write \"src/**/*.{ts,js,json,css,html}\"",
        "format:check": "prettier --check \"src/**/*.{ts,js,json,css,html}\""
    },
    "devDependencies": {
        "@types/chrome": "^0.0.299",
        "copy-webpack-plugin": "^12.0.2",
        "cross-env": "^7.0.3",
        "css-loader": "^7.1.2",
        "dotenv-webpack": "^8.1.0",
        "loglevel": "^1.9.2",
        "prettier": "^3.4.2",
        "raw-loader": "^4.0.2",
        "style-loader": "^4.0.0",
        "ts-loader": "^9.5.2",
        "typescript": "^5.7.3",
        "webpack": "^5.85.0",
        "webpack-cli": "^6.0.1"
    },
    "dependencies": {
        "@mswjs/interceptors": "^0.37.6",
        "lit": "^3.2.1",
        "outvariant": "^1.4.3"
    }
}
